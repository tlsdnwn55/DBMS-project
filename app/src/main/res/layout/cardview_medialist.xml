<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="4dp"
    android:background="#FFFFFF"
    android:paddingHorizontal="4dp"
    android:paddingVertical="4dp">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:gravity="center"
            android:id="@+id/video_title_tv"
            android:fontFamily="@font/calibri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="동영상 제목"
            android:textColor="@color/colorAccent"
            android:textSize="15dp"/>
        <LinearLayout
            android:id="@+id/media_info_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="수익금: "
                    android:textSize="13dp" />

                <TextView
                    android:layout_marginLeft="4dp"
                    android:id="@+id/video_profit_tv"
                    android:fontFamily="@font/calibri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="3212332"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:text="WON "
                    android:textSize="13dp" />
            </LinearLayout>



            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="업로드한 시간: "
                    android:textSize="13dp" />

                <TextView
                    android:layout_marginLeft="4dp"
                    android:id="@+id/video_uploadtime_tv"
                    android:fontFamily="@font/calibri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2019.07.15"
                    android:textSize="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="재생시간: "
                    android:textSize="13dp" />

                <TextView
                    android:layout_marginLeft="4dp"
                    android:id="@+id/video_time_tv"
                    android:fontFamily="@font/calibri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3분 50초"
                    android:textSize="15dp"/>
            </LinearLayout>


            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="조회수: "
                    android:textSize="13dp" />

                <TextView
                    android:layout_marginLeft="4dp"
                    android:id="@+id/video_hit_tv"
                    android:fontFamily="@font/calibri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2500"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_marginLeft="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="회"
                    android:textSize="13dp"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="좋아요수: "
                    android:textSize="13dp" />

                <TextView
                    android:layout_marginLeft="4dp"
                    android:id="@+id/video_likenum_tv"
                    android:fontFamily="@font/calibri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2400"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:text="개"
                    android:textSize="13dp" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>